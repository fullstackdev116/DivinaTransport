<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/color_screen_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="5dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/white"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:id="@+id/ly_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/01/2022"
                android:background="@color/gray"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/txt_transactionID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="124578124"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Method"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/txt_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Orange Mobile Money WebPay (HTTP)"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1000 XOF"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:gravity="top"
                    >
                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Queued"
                        android:textStyle="bold"
                        />
                    <Button
                        android:id="@+id/txt_paylink"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Complete Process"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>