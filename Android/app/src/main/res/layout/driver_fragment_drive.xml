<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_screen_background"
    android:layout_height="match_parent"
    tools:context="com.ujs.divinatransport.DriverMainFragments.Fragment_driver_drive">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.2"
        />
    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:id="@+id/progress_bar"
        android:layout_gravity="top|center"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_menu"
            app:tint="@color/red_dark" />
        <RelativeLayout
            android:id="@+id/ly_ridingSteps"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/btn_location"
            android:layout_toRightOf="@+id/btn_menu"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.5"
                />
            <LinearLayout
                android:id="@+id/ly_step_message1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You applied to a Allen's riding request."
                    android:textSize="13dp"
                    android:textColor="@color/teal_200" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Allen is waiting for you."
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_step_message2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You reached to Allen."
                    android:textSize="13dp"
                    android:textColor="@color/teal_200" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Allen will pay for riding."
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_step_message3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allen has paid for riding."
                    android:textSize="13dp"
                    android:textColor="@color/teal_200" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:text="Please keep driving to ABC address"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_step_message4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allen's riding has ended successfully."
                    android:textSize="13dp"
                    android:textColor="@color/teal_200" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:text="Allen will leave a review of his riding."
                    android:textColor="@color/white" />
            </LinearLayout>

        </RelativeLayout>
        <ImageButton
            android:id="@+id/btn_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_location_view"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/filters_sheet_background"
        android:orientation="vertical"
        app:layout_behavior="com.kienht.bottomsheetbehavior.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_fitToContents="true"
        app:behavior_peekHeight="80dp">

        <RelativeLayout
            android:id="@+id/clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ly_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_avatar" />
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Allen Deal"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:textSize="12dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toLeftOf="@+id/expand_icon"
                android:layout_toRightOf="@+id/ly_avatar"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Position"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/txt_cur_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold|italic"
                    android:lines="2"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="17dp"
                    android:hint="Current location here ..."/>

            </LinearLayout>

            <ImageView
                android:id="@+id/expand_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_expand_more"
                android:tintMode="src_in"
                app:tint="@color/red_dark" />

        </RelativeLayout>

        <View
            android:id="@+id/sheet_header_shadow"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:alpha="0.1"
            android:background="@drawable/filters_sheet_header_shadow"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/description_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="1px"
            android:background="@color/white"
            android:padding="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ly_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        >
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/red_dark"
                            />
                        <View
                            android:layout_width="2dp"
                            android:layout_height="22dp"
                            android:layout_margin="5dp"
                            android:background="@android:color/darker_gray"
                            />
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/teal_200"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        >
                        <TextView
                            android:id="@+id/txt_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:lines="2"
                            android:textSize="17dp"
                            android:text="Departure address here ..."/>
                        <TextView
                            android:id="@+id/txt_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:lines="2"
                            android:textSize="17dp"
                            android:text="Target address here ..."/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:id="@+id/ly_sos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S.O.S"
                            android:textSize="30dp"
                            android:textColor="@color/red"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ly_ride"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/frame_border_red"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_distance"
                                app:tint="@color/gray" />

                            <TextView
                                android:id="@+id/txt_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="12.3 Km"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/ic_time"
                                app:tint="@color/gray" />

                            <TextView
                                android:id="@+id/txt_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="50 mins"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/ic_price"
                                app:tint="@color/gray" />

                            <TextView
                                android:id="@+id/txt_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="1000 XOF"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@color/white"
                        android:text=" Riding Details "
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ly_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_call"
                            android:backgroundTint="@color/red" />

                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="+25487954621" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/stat_notify_chat"
                        android:backgroundTint="@color/red"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/btn_reject"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/red_dark"
                        android:background="@drawable/frame_border_round"
                        android:text="Reject" />
                    <Button
                        android:id="@+id/btn_apply"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_frame"
                        android:text="Apply" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>