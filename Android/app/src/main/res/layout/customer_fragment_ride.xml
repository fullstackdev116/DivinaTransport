<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_screen_background"
    android:layout_height="match_parent"
    tools:context="com.ujs.divinatransport.CustomerMainFragments.Fragment_customer_ride">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.2"
        />
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/filters_sheet_background"
        android:orientation="vertical"
        app:layout_behavior="com.kienht.bottomsheetbehavior.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_fitToContents="true"
        app:behavior_peekHeight="80dp">

        <RelativeLayout
            android:id="@+id/clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/ly_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_avatar" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_rate"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ly_avatar"
                android:background="#4CAF50"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txt_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rate"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:max="100"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/black"
                    android:progressTint="@color/red_dark"
                    android:rating="2.2"
                    android:secondaryProgressTint="@color/red_dark"
                    android:stepSize="0.0" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_carType"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ly_rate"
                android:background="@color/gray"
                android:scaleType="centerInside"
                android:src="@drawable/ic_car2" />
            <LinearLayout
                android:id="@+id/ly_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/img_carType"
                android:background="@drawable/frame_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_seats_dark" />

                <TextView
                    android:id="@+id/txt_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/expand_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_expand_more"
                android:tintMode="src_in"
                app:tint="@color/red_dark" />

            <TextView
                android:id="@+id/txt_state_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:background="@drawable/bubble_incoming"
                android:backgroundTint="@color/red_dark"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Thank you for choosing me"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </RelativeLayout>

        <View
            android:id="@+id/sheet_header_shadow"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:alpha="0.1"
            android:background="@drawable/filters_sheet_header_shadow"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/description_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="1px"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:padding="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/img_car"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_car2" />
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.8"
                            android:background="@color/black" />
                        <TextView
                            android:id="@+id/txt_carPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_centerInParent="true"
                            android:text="XOH 1000/mile"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ly_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_call1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_call"
                            android:backgroundTint="@color/red" />

                        <TextView
                            android:id="@+id/txt_phone1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="+25487954621" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_message1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/stat_notify_chat"
                        android:backgroundTint="@color/red"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:id="@+id/ly_topContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filters_sheet_background1"
            android:padding="10dp"
            >

            <ImageButton
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/red_dark"
                android:src="@drawable/ic_action_go"
                app:tint="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/btn_view"
                android:layout_marginRight="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/red_dark"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="22dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/darker_gray"
                        />
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/teal_200"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/frame_border_round"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        >

                        <ImageView
                            android:id="@+id/img_location"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_location" />

                        <AutoCompleteTextView
                            android:id="@+id/edit_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toEndOf="@+id/img_location"
                            android:layout_toStartOf="@id/ly_tool_start"
                            android:background="@android:color/transparent"
                            android:hint="Departure address here ..."
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="#555555"
                            android:textSize="15dp" />
                        <LinearLayout
                            android:id="@+id/ly_tool_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            >
                            <ImageView
                                android:id="@+id/img_cancel_start"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_close_white"
                                android:visibility="gone"
                                app:tint="#555555" />

                            <ImageView
                                android:id="@+id/img_record_start"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_record"
                                />
                            <ImageView
                                android:id="@+id/img_touch_start"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_touch"
                                app:tint="@color/gray"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/frame_border_round"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/edit_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:layout_toStartOf="@id/ly_tool_target"
                            android:background="@android:color/transparent"
                            android:hint="Target address here ..."
                            android:lines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#555555"
                            android:textSize="15dp" />
                        <LinearLayout
                            android:id="@+id/ly_tool_target"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            >
                            <ImageView
                                android:id="@+id/img_cancel_target"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_close_white"
                                android:visibility="gone"
                                app:tint="#555555" />

                            <ImageView
                                android:id="@+id/img_record_target"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_record"
                                />
                            <ImageView
                                android:id="@+id/img_touch_target"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_touch"
                                app:tint="@color/gray" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/black"
                android:alpha="0.5"
                />

            <LinearLayout
                android:id="@+id/ly_topClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/supporter" />

                <TextView
                    android:id="@+id/txt_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_incoming"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Where to go?"
                    android:textColor="@color/red"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/btn_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_down"
                    app:tint="@color/white" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_menu"
                app:tint="@color/red_dark" />

            <ImageButton
                android:id="@+id/btn_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_location_view"
                />
        </RelativeLayout>

    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sos"
        android:layout_gravity="end|center_vertical"
        android:backgroundTint="@android:color/darker_gray"
        />
    <Button
        android:id="@+id/btn_cancel_ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:text="Cancel"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/ly_ridingSteps"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/filters_sheet_background"
            android:orientation="vertical"
            android:padding="10dp">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_loading"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/loading"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/ly_step1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txt_accept_step1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/holo_green_dark"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:text="Jhon Klak accepted!"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                    <Button
                        android:id="@+id/btn_cancel_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="Cancel"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/img_carType_driver"
                        android:layout_width="120dp"
                        android:layout_height="70dp"
                        android:background="@drawable/car_auris" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/frame_border_red"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_seats_dark" />

                            <TextView
                                android:id="@+id/txt_seats_driver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="2"
                                android:textStyle="bold"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_price_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="1000 XOF/mile"
                            android:textStyle="bold"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:alpha="0.7"
                        />
                    <TextView
                        android:id="@+id/txt_estimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/teal_200"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end|center_vertical"
                        android:layout_centerVertical="true"
                        >
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@android:color/transparent"
                            android:src="@drawable/progress"
                            />

                        <TextView
                            android:id="@+id/txt_time_remaining_step1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="3 mins remaining"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:textStyle="italic" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_step2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_dark"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="Please pay before driving!"
                    android:textColor="@color/red_dark"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Pay Balance: "
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/txt_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/frame_border_round"
                            android:backgroundTint="@color/red_dark"
                            android:gravity="center"
                            android:text="1000.0 XOF"
                            android:textAlignment="center"
                            android:textColor="@color/red_dark"
                            android:textSize="15dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ly_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="10dp"
                        >

                        <Button
                            android:id="@+id/btn_ediapay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:text="EdiaPay" />

                        <Button
                            android:id="@+id/btn_cache"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:text="Cache" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waiting for driver's confirmation.."
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:textStyle="italic"
                        android:textColor="@color/teal_200"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_step3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_dark"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="Enjoy your riding!"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    >
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_pin1"
                        android:layout_marginLeft="10dp"
                        android:text="To:"
                        app:tint="@color/teal_200" />

                    <TextView
                        android:id="@+id/txt_target_step3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lines="2"
                        android:hint="To address here"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_distance"
                        app:tint="@color/gray" />

                    <TextView
                        android:id="@+id/txt_distance_remaining_step3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/gray" />

                    <TextView
                        android:id="@+id/txt_time_remaining_step3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="23dp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center|center_vertical">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/progress" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_step4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_dark"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="Please review your riding!"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/rate_driver_step4"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:max="5"
                            android:min="1"
                            android:numStars="5"
                            android:progressBackgroundTint="@color/gray"
                            android:progressTint="@color/red_dark"
                            android:rating="1.0"
                            android:secondaryProgressTint="@color/red_dark"
                            android:stepSize="0.5" />

                        <TextView
                            android:id="@+id/txt_rate_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="0.0"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edit_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/btn_submit_review"
                            android:gravity="top"
                            android:hint="write your review"
                            android:lines="2" />

                        <Button
                            android:id="@+id/btn_submit_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:text="Submit" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ly_user"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:visibility="visible"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_driver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_avatar"
                android:scaleType="centerCrop"
                />
            <RatingBar
                android:id="@+id/rate_driver"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:progressTint="@color/red_dark"
                android:progressBackgroundTint="@color/black"
                android:secondaryProgressTint="@color/red_dark"
                android:max="100"
                android:numStars="5"
                android:rating="0.0"
                android:stepSize="0.0" />
            <TextView
                android:id="@+id/txt_name_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:lines="1"
                android:layout_marginTop="5dp"
                android:textColor="#555555"
                android:textSize="13dp"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ly_user"
            android:orientation="vertical"
            android:gravity="end"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call"
                    android:visibility="gone"
                    android:backgroundTint="@color/red" />
                <ImageButton
                    android:id="@+id/btn_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/stat_notify_chat"
                    android:backgroundTint="@color/red"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>