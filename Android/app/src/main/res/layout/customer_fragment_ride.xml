<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_screen_background"
    android:layout_height="match_parent"
    tools:context="com.ujs.divinatransport.CustomerMainFragments.Fragment_customer_ride">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.2"
        />
    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:id="@+id/progress_bar"
        android:layout_gravity="top|center"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"/>

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/filters_sheet_background"
        android:orientation="vertical"
        app:layout_behavior="com.kienht.bottomsheetbehavior.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_fitToContents="true"
        app:behavior_peekHeight="80dp">

        <RelativeLayout
            android:id="@+id/clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/ly_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_avatar" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_rate"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ly_avatar"
                android:background="#4CAF50"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txt_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/rate"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:max="100"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/black"
                    android:progressTint="@color/red_dark"
                    android:rating="2.2"
                    android:secondaryProgressTint="@color/red_dark"
                    android:stepSize="0.0" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_carType"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ly_rate"
                android:background="@color/gray"
                android:scaleType="centerInside"
                android:src="@drawable/ic_car2"
                />
            <LinearLayout
                android:id="@+id/ly_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/img_carType"
                android:background="@drawable/frame_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_seats_dark" />

                <TextView
                    android:id="@+id/txt_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/expand_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_expand_more"
                android:tintMode="src_in"
                app:tint="@color/red_dark" />

            <TextView
                android:id="@+id/txt_state_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:background="@drawable/bubble_incoming"
                android:backgroundTint="@color/red_dark"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Thank you for choosing me"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </RelativeLayout>

        <View
            android:id="@+id/sheet_header_shadow"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:alpha="0.1"
            android:background="@drawable/filters_sheet_header_shadow"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/description_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="1px"
            android:background="@color/white"
            android:layout_marginBottom="20dp"
            android:padding="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/img_car"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_car2" />
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.8"
                            android:background="@color/black" />
                        <TextView
                            android:id="@+id/txt_carPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_centerInParent="true"
                            android:text="XOH 1000/mile"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ly_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_call"
                            android:backgroundTint="@color/red" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="+25487954621" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/stat_notify_chat"
                        android:backgroundTint="@color/red"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:id="@+id/ly_topContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filters_sheet_background1"
            android:padding="10dp"
            >

            <ImageButton
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/red_dark"
                android:src="@drawable/ic_action_go" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/btn_view"
                android:layout_marginRight="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/red_dark"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="22dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/darker_gray"
                        />
                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/teal_200"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/frame_border_round"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        >

                        <ImageView
                            android:id="@+id/img_location"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_location" />

                        <AutoCompleteTextView
                            android:id="@+id/edit_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toEndOf="@+id/img_location"
                            android:layout_toStartOf="@id/ly_tool_start"
                            android:background="@android:color/transparent"
                            android:hint="Departure address here ..."
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="#555555"
                            android:textSize="15dp" />
                        <LinearLayout
                            android:id="@+id/ly_tool_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            >
                            <ImageView
                                android:id="@+id/img_cancel_start"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_close_white"
                                android:visibility="gone"
                                app:tint="#555555" />

                            <ImageView
                                android:id="@+id/img_record_start"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_record"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/frame_border_round"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/edit_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:layout_toStartOf="@id/ly_tool_target"
                            android:background="@android:color/transparent"
                            android:hint="Target address here ..."
                            android:lines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#555555"
                            android:textSize="15dp" />
                        <LinearLayout
                            android:id="@+id/ly_tool_target"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            >
                            <ImageView
                                android:id="@+id/img_cancel_target"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_close_white"
                                android:visibility="gone"
                                app:tint="#555555" />

                            <ImageView
                                android:id="@+id/img_record_target"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_record"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/black"
                android:alpha="0.5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/supporter" />

                <TextView
                    android:id="@+id/txt_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_incoming"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Where to go?"
                    android:textColor="@color/red"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/btn_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_down"
                    app:tint="@color/white" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_menu"
                app:tint="@color/red_dark" />

            <ImageButton
                android:id="@+id/btn_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_location_view"
                />
        </RelativeLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>